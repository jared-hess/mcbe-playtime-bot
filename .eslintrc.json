{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-console": "off",
        "no-underscore-dangle": "off",
        "no-confusing-arrow": ["error", {"allowParens": true}],
        "indent": ["error", 2],
        "consistent-return": "off",
        "global-require": "off",
        "no-shadow": ["error", { "builtinGlobals": false, "hoist": "functions", "allow": ["err", "error"] }]
    }
}
